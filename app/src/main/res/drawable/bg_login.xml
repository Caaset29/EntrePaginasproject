<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red_primary" />
        </shape>
    </item>

    <item
        android:width="300dp"
        android:height="300dp"
        android:top="-100dp"
        android:left="-100dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" /> </shape>
    </item>

    <item
        android:width="250dp"
        android:height="250dp"
        android:bottom="-80dp"
        android:right="-80dp"
        android:gravity="bottom|end">
        <shape android:shape="oval">
            <solid android:color="#10FFFFFF" /> </shape>
    </item>

    <item
        android:width="120dp"
        android:height="120dp"
        android:top="150dp"
        android:right="-40dp"
        android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#08FFFFFF" /> </shape>
    </item>

</layer-list>